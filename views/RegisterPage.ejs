<% include ./partials/header %>

    <head>
      <link rel="stylesheet" href="/RegisterPage.css">
    </head>


<div class="row">
  <div col-md-6 cl-sm-12>
      <div class="container surround well" id="containerView">
      	<center>
      <form style="margin-bottom: 5vh" method="post" action="/RegisterPage">
          <div style="margin-bottom: 5vh">
            <h2>Tutor Exchange</h2>
          </div>
      		<form style="margin-bottom: 5vh">

      		<div class="form-group">
      				<label>First Name</label>
      				<input name="firstName" type="text" class="form-control" placeholder="First Name">
      			</div>	
      			<div class="form-group">
              <label>Last Name</label>
              <input name="lastName" type="text" class="form-control" placeholder="Last Name">
            </div>  

            <div class="form-group">
      				<label>User Name</label>
      				<input name="username" type="text" class="form-control" placeholder="User Name">
      			</div>	

      			<div class="form-group">
      				<label>Email</label>
      				<input name="email" type="text" class="form-control" placeholder="Email">
      			</div>

      			<div class="form-group">
      				<label>Password</label>
      				<input name="password" type="password" class="form-control" placeholder="Password">
      			</div>		
      			<div class="form-group">
      				<label>Confirm Password</label>
      				<input type="password" class="form-control" placeholder="Confirm Password">
      			</div>	

      	
      			<hr class="style14">
      			<input type="submit" id="button" class="btn btn-lg btn-block" value="Register">
      		</form>

      	</center>
      <p id="demo"></p>

      </div>
  </div>
</div>

<% include ./partials/footer %>
