<% include ./partials/header %>

<div class="row">
	<div class="col-md-12">
		<div class="container" id="postContainer">
			<h1 style="text-align: center;">Edit Post</h1>
			<form action="/IndexPage/<%= foundPost._id%>?_method=PUT" method="post">
				<div class="form-group">
					<label for="title">Title</label><br>
					<input class = "form-control" id="title" type="text" placeholder="Title" name="post[title]" value="<%= foundPost.title%>">
				</div>
				<div class="form-group">
					<label for="content">Question</label><br>
					<input class = "form-control" id="question" type="text" placeholder="Question Content" name="post[content]" value="<%= foundPost.content%>">
				</div>
				<!-- Preselected Subject -->
				<div class="form-group">
					<label for="subject">Subject</label><br>
					<select name="post[subject]" id="subject" >
						<option value="math">Math</option>
						<option value="computer science">Computer Science</option>
						<option value="physic">Physic</option>
						<option value="chemistry">Chemistry</option>
						<option value="other">Other</option>
					</select>
				</div>
				<div class="form-group">
					<input class = "form-control" type="submit" value="Submit" class="btn btn-primary btn-lg btn-block">
				</div>
			</form>	
			<a href="/IndexPage">Go back</a>
		</div>	
	</div>
</div>


<% include ./partials/footer %>